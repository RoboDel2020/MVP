@{
    @using System;
    @using System.Web;
    ViewData["Title"] = "Main Menu Page";
    @using Microsoft.AspNetCore.Http
}


<style>
    .logout_btn {
        font-size: 15px;
        transition: ease-in all 0.5s;
        background-color: #f5b707;
        color: #fff;
        position: fixed;
        right: 20px;
        top: 10px;
        padding: 6px 13px;
    }

        .logout_btn:hover {
            background-color: #232323;
            color: #fff;
            transition: ease-in all 0.5s;
            border-radius: 26px;
        }

    .logo_text {
        color: #f5b707;
        font-size: 30px;
        font-weight: bold;
        margin-top: 5px
    }

    .menu_btns {
        font-size: 17px;
        background-color: #f5b707;
        color: #000;
        padding: 13px 0px;
        width: 100%;
        max-width: 190px;
        text-align: center;
        display: inline-block;
        transition: ease-in all 0.5s;
        margin: 10px;
    }

        .menu_btns:hover {
            background-color: #232323;
            color: #fff;
            transition: ease-in all 0.5s;
            border-radius: 26px;
        }

    .ulButtons {
        width: 600px;
        height: 400px;
        border: 2px solid black;
        border-radius: 10px;
    }

    .info {
        margin-left: 250px;
    }

        .info li {
            float: left;
        }

            .info li a {
                border: 2px solid black;
                border-radius: 5px;
                margin: 10px;
                font-size: 17px;
                width: 100%;
                height: 150px;
                padding: 15px 15px;
                font-weight: bold;
            }

                .info li a:hover {
                    background-color: #232323;
                    color: #fff;
                    transition: ease-in all 0.5s;
                    border-radius: 26px;
                }
</style>


<div>
    <h1 class="logo_text">RoboDel</h1>
    <button class="logout_btn" type="button" onclick="Logout()">Logout</button>
    <hr>
</div>

<div class="main_menu" align="center">
    <p style="font-weight: bold; font-size: 20px;">Welcome, @Context.Session.GetString("restaurant_name")!</p>

</div>




<script>
    @* Go to Register Page *@
    function Logout() {
        $.ajax({
            type: "POST",
            url: "/Restaurant/Logout",
            async: true,
            dataType: "json",
            data: {},
            success: function (data) {
                window.location.href = '/Login/Index';
            }
        });
    }

   

</script>


<!-- Javascript files-->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/popper.min.js"></script>
<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="~/js/jquery-3.0.0.min.js"></script>
<script src="~/js/plugin.js"></script>
<!-- sidebar -->
<script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
<script src="~/js/custom.js"></script>
<script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>

















































